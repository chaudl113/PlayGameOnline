<style>
    .user_card {
        width: 450px;
        margin-top: auto;
        margin-bottom: auto;
        background: #fff;
        position: relative;
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding: 40px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        -moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        border-radius: 5px;

    }

    .brand_logo_container {
        width: 300px;
        height: 300px;
        text-align: center;
    }

    .brand_logo {
        height: 100%;
        width: 100%;

    }

    .author-info {
        margin-top: 50px;
        text-align: center;
    }

    .info-content {
        width: 100%;
    }


    .custom-form {
        width: 90%;
    }

    .common_btn {
        width: 100%;
        background: #20bf6b !important;
        color: white !important;
        position: relative;
        -webkit-transition-duration: 0.4s;
        /* Safari */
        transition-duration: 0.4s;
        overflow: hidden;
    }

    .common_btn:focus {
        box-shadow: none !important;
        outline: 0px !important;
    }

    .common_btn:after {
        content: "";
        background: #90EE90;
        display: block;
        position: absolute;
        padding-top: 300%;
        padding-left: 350%;
        margin-left: -20px !important;
        margin-top: -120%;
        opacity: 0;
        transition: all 0.8s
    }

    .common_btn:active:after {
        padding: 0;
        margin: 0;
        opacity: 1;
        transition: 0s
    }

    .login_container {
        padding: 0 2rem;
    }

    .input-group-text {
        background: #20bf6b !important;
        color: white !important;
        border: 0 !important;
        border-radius: 0.25rem 0 0 0.25rem !important;
    }

    .input_user,
    .input_pass:focus {
        box-shadow: none !important;
        outline: 0px !important;
    }

    .custom-checkbox .custom-control-input:checked~.custom-control-label::before {
        background-color: #20bf6b !important;
    }

    .offset-height {
        height: 170px;
    }

    #img-qr-code-area {
        justify-content: center;
    }
</style>

<div class="h-100 pl-2 pt-2">
    <div class=" h-100">
        <div class="user_card">
            <h6></h6>
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src=" <%=QRCodeImage %>" class="brand_logo" alt="Logo">
                </div>
            </div>

            <div class="author-info">
                <div class="info-content text-center">
                    <h5> Two-Factor Authentication (2FA)</h5>
                </div>
                <div class="info-content text-center">
                    Author: <%= user.name %>
                </div>
                <div class="info-content text-center">
                    GOOGLE AUTHENTICATION
                </div>
                <hr />
            </div>

            <div class="d-flex justify-content-center form_container">
                <form class="custom-form">
                    <div class="d-flex justify-content-center login_container">
                        <button type="button" name="button" id="enable-2fa" class="btn common_btn enable-2fa">Kích
                            hoạt</button>
                    </div>
                    <div class="input-group" id="img-qr-code-area"></div>
                    <div class="offset-height"></div>
                </form>
            </div>


        </div>
    </div>
</div>

<script>

    $(document).ready((e) => {
        const url = '/enable-2fa'
        $('#enable-2fa').on('click', function (e) {
            $.ajax({
                type: "POST",
                url: url,
                success: function (data) {
                    window.location.replace('http://localhost:8000/');
                }
            });
        })
    })
</script>