<div class="app-main__inner">



    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="row">
                <div class="col-md-12">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Controls Types</h5>
                            <!-- <form class="" method="post" action="/product" enctype="multipart/form-data"> -->
                            <form id="productForm" class="col-md-10 mx-auto" method="post" action="/product"
                                novalidate="novalidate" enctype="multipart/form-data">
                                <% if (error && error.length>0) { %>
                                    <div class="alert alert-primary" role="alert">
                                        <%= error[0] %>
                                    </div>
                                    <% } %>
                                        <div class="position-relative form-group">
                                            <label for="exampleGameName" class="">Game Name</label>
                                            <input name="exampleGameName" id="exampleGameName"
                                                placeholder="with a placeholder" type="text" class="form-control">

                                        </div>
                                        <div class="position-relative form-group">
                                            <label for="price" class="">Price</label>
                                            <input name="price" id="price" placeholder="price placeholder" type="number"
                                                class="form-control">
                                        </div>
                                        <div class="position-relative form-group">
                                            <label for="ios" class="">App Store</label>
                                            <input name="ios" id="ios" placeholder="with a placeholder" type="text"
                                                class="form-control">
                                        </div>

                                        <div class="position-relative form-group">
                                            <label for="apk" class="">Ch Play</label>
                                            <input name="apk" id="apk" placeholder="with a placeholder" type="text"
                                                class="form-control">
                                        </div>
                                        <div class="position-relative form-group">
                                            <label for="exampleDescription" class="">Description</label>
                                            <textarea name="exampleDescription" id="exampleDescription"
                                                class="form-control"></textarea>
                                        </div>
                                        <% if (data.length>0 ) { %>
                                            <div class="position-relative form-group">
                                                <label for="select" class="">Select</label>
                                                <select name="select" id="select" class="form-control required">
                                                    <option value="">Choose an option</option>
                                                    <% for( let index=0; index < data.length; index++ ) { %>
                                                        <option value="<%= data[index].name %> ">
                                                            <%= data[index].name %>
                                                        </option>

                                                        <% } %>

                                                </select>
                                            </div>
                                            <% } %>

                                                <div class="position-relative form-group">
                                                    <label for="fileGame" class="">File Game</label>
                                                    <input name="fileGame" id="fileGame" type="file"
                                                        class="form-control-file">
                                                    <small class="form-text text-muted">
                                                        <div class=""></div>Zip
                                                    </small>
                                                </div>
                                                <div class="position-relative form-group">
                                                    <label for="image" class="">Image</label>
                                                    <input name="image" id="image" type="file" class="form-control-file"
                                                        accept="image/x-png,image/gif,image/jpeg">
                                                    <small class="form-text text-muted">
                                                        <div class=""></div> jpg png
                                                    </small>
                                                </div>
                                                <div class="position-relative form-group">
                                                    <label for="icon" class="">Icon</label>
                                                    <input name="icon" id="icon" type="file" class="form-control-file"
                                                        accept="image/x-png,image/gif,image/jpeg">
                                                    <small class="form-text text-muted">
                                                        <div class=""></div> jpg png
                                                    </small>
                                                </div>
                                                <button class="mt-1 btn btn-primary float-right" type="submit"
                                                    name="Submit" value="Submit">Submit</button>
                                                <a href='/product' class="mt-1 btn btn-light "><i>
                                                    </i>
                                                    Exit</a>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>