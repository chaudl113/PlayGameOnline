<div class="main-card mb-3 card">
    <div class="card-body">
        <button type="button" class="btn mr-2 mb-2 btn-primary" data-toggle="modal" data-target="#exampleModal">
            Add
        </button>
        <% if (message && message.length >0) { %>
        <div class="alert alert-info" role="alert">
            <%= message[0] %>
        </div>
        <% } %>
        <% if (data) { %>
        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<data.length; i++){ %>

                <tr>
                    <td><%= data[i].id %></td>

                    <td><%= data[i].name %></td>

                    <td><button onclick="window.location.href='products-types/<%= data[i].id %>/delete'"
                            class=" btn-icon btn btn-danger "><i class="pe-7s-delete-user btn-icon-wrapper">
                            </i>Delete</button></td>
                    </td>
                </tr>
                <% } %>


            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>

                    <th>Name</th>

                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
        <% } else { %>
        <h5>no products</h5>
        <% } %>


    </div>
</div>