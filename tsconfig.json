{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017", "es2018", "esnext.asynciterable"],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "typeRoots": [ "node_modules/@types/" ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": false,
        "watch": false,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
, "dist/public/assets", "public"    ]
}